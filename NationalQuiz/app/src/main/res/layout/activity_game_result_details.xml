<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".game_result.GameResultDetailsActivity">

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myDarkerSecondary"
        android:textStyle="bold|italic"
        android:padding="10dp"
        android:text="@string/gameDetails"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForResultDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mySecondary" />

</LinearLayout>